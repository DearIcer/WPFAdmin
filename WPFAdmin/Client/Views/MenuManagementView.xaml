<UserControl x:Class="Client.Views.MenuManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:Client.Models"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 菜单树形结构 -->
        <GroupBox Grid.Row="0" Header="菜单结构" Margin="0,0,0,10">
            <TreeView x:Name="MenuTreeView" 
                      ItemsSource="{Binding MenuItems}"
                      SelectedItemChanged="MenuTreeView_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type models:MenuItem}" ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Icon}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Name}"/>
                            <TextBlock Text=" (" FontStyle="Italic" Foreground="Gray"/>
                            <TextBlock Text="{Binding Id}" FontStyle="Italic" Foreground="Gray"/>
                            <TextBlock Text=")" FontStyle="Italic" Foreground="Gray"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </GroupBox>

        <!-- 菜单编辑区域 -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- 菜单详情 -->
            <GroupBox Grid.Column="0" Header="菜单详情" Margin="0,0,5,0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewItemId, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5" IsEnabled="{Binding IsItemSelected}"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="名称:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewItemName, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5" IsEnabled="{Binding IsItemSelected}"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="图标:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewItemIcon, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5" IsEnabled="{Binding IsItemSelected}"/>

                    <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="更新菜单项" 
                            Command="{Binding EditCommand}" Margin="5" Padding="10,5"/>
                </Grid>
            </GroupBox>

            <!-- 添加新菜单项 -->
            <GroupBox Grid.Column="1" Header="添加新菜单项" Margin="5,0,0,0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewItemId, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="名称:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewItemName, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="图标:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewItemIcon, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="父级:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" 
                              ItemsSource="{Binding MenuItems}" 
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding ParentItem}"
                              Margin="5">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="添加菜单项" 
                            Command="{Binding AddCommand}" Margin="5" Padding="10,5"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="删除选中项" Command="{Binding DeleteCommand}" 
                    Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="保存更改" Command="{Binding SaveCommand}" 
                    Margin="0,0,10,0" Padding="10,5"/>
        </StackPanel>
    </Grid>
</UserControl>