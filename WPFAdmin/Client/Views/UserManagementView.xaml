<UserControl x:Class="Client.Views.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:grpc="clr-namespace:Backed.Grpc;assembly=Backed"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 用户列表 -->
        <GroupBox Grid.Row="0" Header="用户列表" Margin="0,0,0,10">
            <DataGrid x:Name="UsersDataGrid" 
                      ItemsSource="{Binding Users}"
                      SelectedItem="{Binding SelectedUser}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="All"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="用户名" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="邮箱" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="激活状态" Binding="{Binding IsActive}" Width="80"/>
                    <DataGridTextColumn Header="创建时间" Binding="{Binding CreatedAt}" Width="120"/>
                    <DataGridTextColumn Header="更新时间" Binding="{Binding UpdatedAt}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- 用户详情/编辑 -->
        <GroupBox Grid.Row="1" Header="{Binding IsEditing, Converter={StaticResource BoolToEditHeaderConverter}}" 
                  Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 用户名 -->
                <Label Grid.Row="0" Grid.Column="0" Content="用户名:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         Text="{Binding EditingUser.Username, UpdateSourceTrigger=PropertyChanged}" 
                         IsEnabled="{Binding IsEditing}"
                         Margin="5"/>

                <!-- 邮箱 -->
                <Label Grid.Row="1" Grid.Column="0" Content="邮箱:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         Text="{Binding EditingUser.Email, UpdateSourceTrigger=PropertyChanged}" 
                         IsEnabled="{Binding IsEditing}"
                         Margin="5"/>

                <!-- 密码 -->
                <Label Grid.Row="2" Grid.Column="0" Content="密码:" VerticalAlignment="Center"/>
                <PasswordBox Grid.Row="2" Grid.Column="1" 
                             x:Name="PasswordBox"
                             IsEnabled="{Binding IsEditing}"
                             Margin="5"/>

                <!-- 激活状态 -->
                <CheckBox Grid.Row="3" Grid.Column="1" 
                          Content="激活状态" 
                          IsChecked="{Binding EditingUser.IsActive}"
                          IsEnabled="{Binding IsEditing}"
                          Margin="5"/>

                <!-- 用户角色 -->
                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Text="用户角色:" Margin="0,10,0,5"/>
                    <ItemsControl ItemsSource="{Binding AvailableRoles}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          IsChecked="{Binding IsAssigned}"
                                          Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="保存" 
                            Command="{Binding SaveUserCommand}" 
                            Margin="0,0,10,0" Padding="10,5"/>
                    <Button Content="取消" 
                            Command="{Binding CancelEditCommand}" 
                            Margin="0,0,10,0" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 添加新用户 -->
        <GroupBox Grid.Row="2" Header="添加新用户">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 用户名 -->
                <Label Grid.Row="0" Grid.Column="0" Content="用户名:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="5"/>

                <!-- 邮箱 -->
                <Label Grid.Row="1" Grid.Column="0" Content="邮箱:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         Text="{Binding NewEmail, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="5"/>

                <!-- 密码 -->
                <Label Grid.Row="2" Grid.Column="0" Content="密码:" VerticalAlignment="Center"/>
                <PasswordBox Grid.Row="2" Grid.Column="1" 
                             x:Name="NewPasswordBox"
                             PasswordChanged="NewPasswordBox_PasswordChanged"
                             Margin="5"/>

                <!-- 操作按钮 -->
                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="刷新" 
                            Command="{Binding LoadUsersCommand}" 
                            Margin="0,0,10,0" Padding="10,5"/>
                    <Button Content="添加用户" 
                            Command="{Binding AddUserCommand}" 
                            Margin="0,0,10,0" Padding="10,5"/>
                    <Button Content="编辑用户" 
                            Command="{Binding EditUserCommand}" 
                            Margin="0,0,10,0" Padding="10,5"/>
                    <Button Content="删除用户" 
                            Command="{Binding DeleteUserCommand}" 
                            Margin="0,0,10,0" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>